@inherits ViewPage<PostsResponse>

@{
    ViewBag.Title = "Posts";
}

<div class="page-header">
    <h3>Posts for @Model.Blog.Name</h3>
</div>
<button class="btn btn-inverse">Create New Post</button>

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Message</th>
            <th>Created On</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Posts.Any())
        {
            <tr><td colspan="4">No Posts Available</td></tr>
        }
        @foreach (var post in Model.Posts)
        {
            <tr id="blog-row-@post.Id">
                <td>@post.Id</td>
                <td>@post.Title</td>
                <td>@post.Message</td>
                <td>@post.CreatedOn</td>
            </tr>
        }
    </tbody>
</table>